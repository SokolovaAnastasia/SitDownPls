doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title SitDownPlsCard
        include mixin.pug
        +baseHead
    body.body
        .modalimgs
            .modalimgs__container.flex
                .modalimgs__subcontainer
                    button.modalimgs__btn.btn(aria-label="закрыть модальное окно")
                    .swiper.mySwiper8
                        include mixin.pug
                        +swiperCard
                        .swiper-button-next
                        .swiper-button-prev
                    .swiper.mySwiper7
                        +swiperCard
                        include mixin.pug
                        +btns
        include mixin.pug
        - var pageheader = 'card'
        +header(pageheader)
        main
            .container.card.flex
                .card__left
                    .card__leftcont
                        .card__leftcontainer
                            button.card__leftbtn.btn
                                img.imgreset.lazy.card__leftimg(data-src="../imgs/cardLeftImgs2.svg" alt="товар" src="../background.jpg")
                            include mixin.pug
                            - var classs = 'card__rightcontainer768'
                            +card768(classs)
                            - var ids = 'agreementsis'
                            +modalBuy(ids)
                            +thankyou
                            ul.card__leftimgs.flex.listreset
                                - var cardLeftImgs = [{src:'../imgs/cardLeftImgs1.svg'},{src:'../imgs/cardLeftImgs3.svg'},{src:'../imgs/cardLeftImgs4.svg'},{src:'../imgs/cardLeftImgs5.svg'}]
                                    each list in cardLeftImgs
                                        li.card__leftimgsitems
                                            img.card__leftimgsitemsimg.imgreset.lazy(data-src= "" + list.src alt="дополнительные изображения" src="../background.jpg")
                        h3.hreset.card__lefttitle Опорный механизм
                        p.preset.card__lefttexttop Опорный механизм напоминает пантограф, к которому добавили дополнительную секцию. У опорного дивана сиденье «выпрыгивает» вперёд и вытаскивает вторую часть спального места. Заключительный штрих — опустить спинку.
                        p.preset.card__lefttextbottom Этот механизм не портит пол и не боится ковров. Требуется чуть больше силы, чтобы разложить диван, но подросток справится.
                        img.imgreset.lazy.card__leftsubimg(data-src="../imgs/cardLeftImgs6.webp" alt="схематичный рисунок" src="../background.jpg")
                .card__right
                    include mixin.pug
                    - var classs = 'card__rightcontainer1920'
                    +card768(classs)
                    - var ids = 'agreements'
                    +modalBuy(ids)
                    +thankyou
                    .card__rightlistscontainer.flex
                        dl.card__rightdl.flex
                            - var cardRightList = [{name:'Гарантия', value:'18 месяцев'},{name:'Артикул', value:'AAA41269004'},{name:'Длина', value:'163 см'},{name:'Высота', value:'90 см'},{name:'Глубина', value:'108 см'},{name:'Спальное место', value:'200 см х 125 см'},{name:'Высота посадки', value:'45 см'},{name:'Механизм', value:'Опорный'},{name:'Тип обивки', value:'Рогожка'},{name:'Цвет', value:'Синий'},{name:'Наполнитель', value:'Независимый пружинный блок'},{name:'Материал каркаса', value:'Металл. рама с дерев. латами'},{name:'Количество мест', value:'Двухместные'},{name:'Категория', value:'Прямые тканевые диваны'},{name:'Возврат', value:'Условия'}]
                                each list in cardRightList
                                    .containercard.card__rightcontainercard.flex
                                        dt.card__rightdt= list.name
                                        dd.card__rightdd= list.value
                .card__bottom
                    h2.hreset.card__bottomtitle Похожие товары
                    .btnscontain
                        include mixin.pug
                        +btns
                    .swiper-container.mySwiper5.card__bottom
                        .swiper-wrapper
                            include mixin.pug
                            - var page = 'card'
                            +products
        include mixin.pug
        +footer
        script(src="https://unpkg.com/swiper/swiper-bundle.min.js")
        script(src="../choices.min.js")
        script(src='https://cdn.jsdelivr.net/npm/vanilla-lazyload@15.1.1/dist/lazyload.min.js')
        script(src="app.js")